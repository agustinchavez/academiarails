<% provide(:page_title, @post.title) %>
<% provide(:author, "active") %>

<div>
  <% if author_signed_in? %>
    <%= link_to 'Editar',  edit_authors_post_path(@post), class: 'btn btn-sm btn-warning' %>
    <%= link_to 'Remover',  authors_post_path(@post), method: :delete, data:{ confirm: 'Estas seguro?'}, class: 'btn btn-sm btn-danger' %>
  <% end %>
</div>

<h1 id="secciones_tags"><%= @post.title %></h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 text-xs-center" id="post_body">
    <% if author_signed_in? %>
      <p> <%= @post.display_day_published %></p>
    <% end %>
    <%= @post.body.html_safe %>
  </div>
</div>