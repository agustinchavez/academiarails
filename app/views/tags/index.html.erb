<h1 id="secciones_tags">Secci√≥nes</h1>

<div class="container">
  <% @tags.each_slice(1) do |tags| %>
    <div class="row">
      <% tags.each do |tag| %>
        <div class="col-md-8" id="tagSection">
          <%= link_to tag.name, tag_path(tag) %>
          <p class="tagDescription"><%= truncate(tag.posts.first.description, length: 200) %></p>
          <img class="tagImage" src="<%= tag.posts.first.banner_image_url %>">

          <% if author_signed_in? %>
          <%= link_to "delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the tag?"} %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="footer">
  <h1>This is a footer</h1>
</div>
